.nav
  .banner{style: "line-height: 0.5"}
    -if @theme.logo_image_id.nil?
      .title
        %span.thin THE
        %span.fat REALISTIC
        %br
        %span.thin ORGANIZER
      .tagline
        =@theme.tagline
    -else
      .title
        = attachment_image_tag @theme, :logo_image
      .tagline
        =@theme.tagline
        -else
          ADVENTURES IN ORGANIZING AND ATTEMPTS AT CREATIVITY
  %i.mobile_menu.fa.fa-2x.fa-bars
%header.centered-navigation{:role => "banner"}
  .centered-navigation-wrapper
    .title.mobile-logo
      -if @theme.logo_image_id.nil?
        %span.thin THE
        %span.fat REALISTIC
        %br
        %span.thin ORGANIZER
      -else
        = attachment_image_tag @theme, :logo_image
    %a#js-centered-navigation-mobile-menu.centered-navigation-mobile-menu.fa.fa-bars.fa-2x{:href => "javascript:void(0)"}
    %nav{:role => "navigation"}
      -if @menu
        %ul#js-centered-navigation-menu.centered-navigation-menu.show
          -@menu.menu_items.each do |item|
            -if item.sub_items.empty?
              %li.nav-link
                =link_to item.name, item.link
            -else
              %li.nav-link.more
                =link_to item.name, item.link
                -if item.sub_items
                  %ul.submenu
                    -item.sub_items.each do |sub_item|
                      -if sub_item.sub_items.empty?
                        %li
                          =link_to sub_item.name, ""
                      -else
                        %li.more
                          =link_to sub_item.name, ""
                          -if sub_item.sub_items
                            %ul.submenu
                              -sub_item.sub_items.each do |sub_item|
                                %li
                                  =link_to sub_item.name, ""
          %li.nav-link
            = search_form_for @q, class: "search-bar", url: search_posts_path, html: { method: :post } do |f|
              = f.search_field :title_or_body_cont
              = f.button do
                %i.fa.fa-search
      -else
        %ul#js-centered-navigation-menu.centered-navigation-menu.show
          %li.nav-link
            =link_to "HOME", root_url
          %li.nav-link
            =link_to "ABOUT ME", about_path
          %li.nav-link
            =link_to "WORK WITH ME", contact_path
          %li.nav-link
            =link_to "WEDDINGS", category_path(Category.find_by_name("Weddings").id)
          %li.nav-link.more
            =link_to "ORGANIZING", category_path(Category.find_by_name("Organizing for Others").id)
            %ul.submenu
              %li
                =link_to "KITCHEN", category_path(Category.find_by_name("Kitchen").id)
              %li
                =link_to "HOME OFFICE", category_path(Category.find_by_name("Home Office").id)
              %li
                =link_to "QUICK FIXES", category_path(Category.find_by_name("Quick Fixes").id)
              %li
                =link_to "CLOSETS", category_path(Category.find_by_name("Closets").id)
              %li
                =link_to "BUDGET FRIENDLY", category_path(Category.find_by_name("Budget Friendly").id)
              %li
                =link_to "HOLIDAYS", category_path(Category.find_by_name("Holidays").id)
              %li.more
                =link_to "MORE", ""
                %ul.submenu
                  %li
                    =link_to "ORGANZING FOR OTHERS", category_path(Category.find_by_name("Organizing for Others").id)
                  %li
                    =link_to "TRAVEL", category_path(Category.find_by_name("Travel").id)
          %li.nav-link.more
            =link_to "MORE", ""
            %ul.submenu
              %li
                =link_to "RECENT PROJECTS", category_path(Category.find_by_name("Recent Projects").id)
              %li
                =link_to "ALL CATEGORIES", categories_path
              %li
                =link_to "ALL POSTS", posts_path
          %li.nav-link
            = search_form_for @q, class: "search-bar", url: search_posts_path, html: { method: :post } do |f|
              = f.search_field :title_or_body_cont
              = f.button do
                %i.fa.fa-search
