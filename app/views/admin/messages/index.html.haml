= render "admin/nav"
%table.tables
  %thead
    %tr
      %th EMAIL
      %th MESSAGE TYPE
      %th ACTION
  %tbody
    - @messages.each do |m|
      %tr
        %td= "#{m.email}: #{m.name}"
        %td= "#{m.message_type}"
        %td
          =button_to "View", admin_message_path(m), class: "item button", method: :get
          =button_to "Delete", admin_message_path(m), class: "item button btn-warning", method: :delete
%hr.thick
.pagination
  = paginate @messages
