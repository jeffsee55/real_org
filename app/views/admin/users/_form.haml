= simple_form_for [:admin, @user] do |f|
  .clearfix
    .card
      #image= image_tag attachment_url(@user, :image, :fill, 300, 300) if @user.image_id?
      = f.input :remove_image, as: :boolean, label: "Remove Image"
      = f.attachment_field :image, direct: true, class: "image_upload"
    .post_info
      = f.input :first_name
      = f.input :last_name
      = f.input :email
      = f.input :bio
      = f.submit "Save", class: "button", data: { disable_with: "Saving..."}
