New Author
= simple_form_for [:admin, @author] do |f|
  - if @author.avatar_id?
    = image_tag attachment_url(@author, :avatar, :fill, 200, 200)
    %label Remove Image
    = f.check_box :remove_avatar
  = f.attachment_field :avatar, direct: true
  #image
  = f.input :first_name
  = f.input :last_name
  = f.input :email
  = f.input :bio
  = f.submit
