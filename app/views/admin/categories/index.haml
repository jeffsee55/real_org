=render "nav"
.body
  .index
    - @categories.each do |c|
      .card
        =link_to edit_admin_category_path(c) do
          -if c.image
            .image{style: "background: url('#{attachment_url(c.posts.last, :image, :fill, 200, 200)}') no-repeat center; background-size: cover"}
          -else
            .image
          .content
            .title
              %strong=c.nice_name
            = "#{c.posts.count} posts"
        %ul.action
          %li
            =link_to category_path(c) do
              %i.fa.fa-link
          %li
            =link_to edit_admin_category_path(c) do
              %i.fa.fa-pencil
          %li
            =link_to admin_category_path(c), method: :delete do
              %i.fa.fa-trash
