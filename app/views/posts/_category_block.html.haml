.category-block
  %ul
    - i = 0
    - @categories.each do |c|
      - i += 1
      = link_to c do
        -if c.image_id?
          %li{style: "background: url('#{attachment_url(c, :image, :fill, 100, 100)}') no-repeat center; background-size: cover; color: #{c.tag_color}"}
        -else
          %li{style: "background: url('http://placehold.it/100x100/#{c.tag_color.gsub("#", "")}/fff/&text=#{c.nice_name.parameterize}') no-repeat center; background-size: cover; color: #{c.tag_color}"}
        = c.nice_name.upcase
