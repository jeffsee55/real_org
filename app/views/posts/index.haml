.container
  = render "nav"
  .index
    - @categories.each do |cat|
      =link_to category_path(cat.id) do
        %h5.tag{style: "background: #{cat.tag_color}"}= cat.nice_name.upcase
      %hr.dark-hr
      %ul.index_row
        - cat.posts.limit(3).each do |p|
          =link_to p do
            %li.card-full{style: "background-image: url('#{asset_path "unsplash-3.jpg"}')"}
              %span.overlay
              .content
                %h3= p.title.upcase
              .plus
                %i.fa.fa-2x.fa-angle-double-down.plus-inner
= render "footer"
